---
const themeScript = `
(function() {
  const savedTheme = localStorage.getItem('theme');
  const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
  const theme = savedTheme || (prefersDark ? 'dark' : 'light');
  document.documentElement.classList.add(theme);
})();
`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Aplicar tema con CSS antes de cargar el contenido -->
    <style>
      /* Asegura que el tema se aplique antes de que la página cargue */
      body {
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      /* Definir los colores predeterminados para el tema claro */
      html {
        background-color: white;
        color: #333;
      }

      /* Tema oscuro */
      html.dark {
        background-color: #333;
        color: white;
      }
    </style>

    <!-- Ejecutar script para aplicar el tema -->
    <script type="text/javascript">
      {themeScript}
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sobre David Pazán, Ingeniero Civil Informático y desarrollador web" />
    <title>David Page</title>
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
  </head>
  <body class="font-sans transition-colors duration-300 min-h-screen flex flex-col">
    <slot />
  </body>
</html>
