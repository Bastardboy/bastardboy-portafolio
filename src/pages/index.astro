---
import '../styles/global.css'
import AboutMe from '../components/AboutMe.vue'
import Technologies from '../components/Technologies.vue'
import Education from '../components/Education.astro'
import Projects from '../components/Projects.vue'
import ThemeSwitcher from '../components/ThemeSwitcher.vue'
import '@fortawesome/fontawesome-free/css/all.css';

const DavidPerfil = 'images/David1.webp'
const DavidAlt = 'images/David2.webp'

const initialTheme = 'light'; 
---

<html lang="en" class={initialTheme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sobre David Pazán, Ingeniero Civil Informático y desarrollador web">
    <title>David Page</title>
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  </head>
  <body class="bg-gray-100 text-gray-900 dark:bg-gray-800 dark:text-white">
    <header class="bg-gray-800 dark:bg-gray-900 text-white dark:text-gray-100 p-4 transition-colors duration-300">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-3xl font-bold">Prueba Técnica</h1>
        <ThemeSwitcher client:load />
      </div>
    </header>
    
    <main class="container mx-auto p-4">
      <section id="AboutMe" class="bg-white dark:bg-gray-900 text-black dark:text-white p-4 rounded-lg shadow-md mb-8">
        <AboutMe
          client:load
          originalImage={DavidPerfil}
          altImage={DavidAlt}
        />
      </section>

      <section id="Projects" class="bg-white dark:bg-gray-900 text-black dark:text-white p-4 rounded-lg shadow-md mb-8">
        <Projects client:load />
      </section>

      <section id="Technologies" class="bg-white dark:bg-gray-900 text-black dark:text-white p-4 rounded-lg shadow-md mb-8">
        <Technologies client:load />
      </section>

      <section id="Studies" class="bg-white dark:bg-gray-900 text-black dark:text-white p-4 rounded-lg shadow-md mb-8">
        <Education />
      </section>
    </main>

    <footer class="bg-gray-800 dark:bg-gray-900 text-white dark:text-gray-100 p-4 mt-8 transition-colors duration-300">
      <div class="container mx-auto text-center">
        <p>© 2025 David</p>
        <div class="flex justify-center mt-2">
          <a href="https://www.linkedin.com/in/david-pazan" aria-label="Perfil de David Pazán en Linkedin" class="mx-2 text-blue-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5v-14c0-2.761-2.239-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.268c-.966 0-1.75-.784-1.75-1.75s.784-1.75 1.75-1.75 1.75.784 1.75 1.75-.784 1.75-1.75 1.75zm13.5 11.268h-3v-5.5c0-1.378-.028-3.152-1.919-3.152-1.919 0-2.213 1.5-2.213 3.048v5.604h-3v-10h2.881v1.367h.041c.401-.761 1.379-1.561 2.841-1.561 3.039 0 3.6 2.001 3.6 4.604v5.59z"/>
            </svg>
          </a>
          <a href="https://github.com/Bastardboy" aria-label="Repositorios trabajos Universidad y prácticas" class="mx-2 text-blue-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.627 0-12 5.373-12 12 0 5.302 3.438 9.8 8.205 11.387.6.111.82-.261.82-.577 0-.285-.01-1.04-.015-2.04-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.089-.744.083-.729.083-.729 1.205.084 1.838 1.237 1.838 1.237 1.07 1.834 2.809 1.304 3.495.997.108-.775.419-1.305.762-1.605-2.665-.305-5.466-1.332-5.466-5.931 0-1.31.469-2.381 1.236-3.221-.124-.303-.536-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.289-1.552 3.295-1.23 3.295-1.23.655 1.653.243 2.874.119 3.176.77.84 1.235 1.911 1.235 3.221 0 4.61-2.804 5.624-5.475 5.921.43.372.814 1.102.814 2.222 0 1.606-.015 2.898-.015 3.293 0 .319.216.694.825.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>