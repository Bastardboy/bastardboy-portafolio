---
import "../styles/global.css";
import Education from "../components/Education.astro";
import Header from "../components/Header.vue";

const initialTheme = "light";
---

<html lang="en" class={initialTheme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Sobre David Pazán, Ingeniero Civil Informático y desarrollador web"
    />
    <title>David Page</title>
    <link rel="icon" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-white text-gray-900 dark:bg-gray-800 dark:text-white font-sans transition-colors duration-300"
  >
    <!-- HEADER -->
    <Header client:load />

    <!-- MAIN -->
    <main class="container mx-auto p-4">
      <section id="Studies" class="section mb-8">
        <Education />
      </section>

      <!-- Contacto -->
    </main>

    <!-- FOOTER -->
    <footer class="bg-blue-900 text-white p-4 mt-8">
      <div class="container mx-auto text-center">
        <p>© 2025 David Pazán</p>
      </div>
    </footer>
  </body>
</html>
